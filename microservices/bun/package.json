{
  "name": "bun",
  "version": "1.0.0",
  "description": "Tasks service (Bun + Elysia + TypeORM + TS)",
  "type": "module",
  "main": "src/app.ts",
  "scripts": {
    "dev": "bun --watch run src/app.ts",
    "start": "bun run src/app.ts",
    "typeorm": "bunx typeorm-ts-node-commonjs",
    "migration:generate": "bunx typeorm-ts-node-commonjs migration:generate -d src/infrastructure/db/data-source.ts src/infrastructure/db/migrations/migration",
    "migration:run": "bunx typeorm-ts-node-commonjs migration:run -d src/infrastructure/db/data-source.ts",
    "migration:revert": "bunx typeorm-ts-node-commonjs migration:revert -d src/infrastructure/db/data-source.ts",
    "lint": "eslint . --ext .ts",
    "test": "bun test"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "elysia": "^1.0.21",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "bun-types": "^1.1.22",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.1.22"
  },
  "license": "MIT",
  "author": "fxpw"
}
